<?xml version='1.0' encoding='utf-8'?>
<widget id="com.sfdk.crmapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CRM - APP</name>
    <description>
       Dale seguimiento a tus prospectos con CRM-APP.
    </description>
    <author email="mlopez@sfd.com.mx">
        Marco Antonio López Pérez
    </author>
    <content src="inicio.html" />
    <access origin="*" />
    <access origin="http://dkmatrizz.ddns.net/* " />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-targetSdkVersion" value="29" />
    <preference name="android-minSdkVersion" value="22" />
    <preference name="android-maxSdkVersion" value="29" />
    <preference name="orientation" value="portrait" />
</widget>
